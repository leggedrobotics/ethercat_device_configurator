  <package format="2">

    <name>ethercat_device_configurator</name>
    <version>0.6.0</version>
    <description>Core C++ library to interface one or multiple drives. Contains abstract base classes for the communication interface.</description>

    <license>BSDv3</license>
    <author email="jungerj@student.ethz.ch">Jonas Junger</author>
    <author email="nachtigall@mavt.ethz.ch">Lennart Nachtigall</author>
    <maintainer email="jungerj@student.ethz.ch">Jonas Junger</maintainer>
    <maintainer email="nachtigall@mavt.ethz.ch">Lennart Nachtigall</maintainer>
  <url type="website">https://github.com/leggedrobotics/ethercat_device_configurator</url>

  <buildtool_depend>catkin</buildtool_depend>
  <depend>ethercat_sdk_master</depend>
  <depend>yaml-cpp</depend>
  <depend>param_io</depend>
  <!-->
    Optional dependencies.
    Any single drive sdk or any combination of sdks may be used.
  <-->
  <depend>anydrive_rsl</depend>
  <depend>elmo_ethercat_sdk</depend>
  <depend>mps_ethercat_sdk</depend>
  <depend>maxon_epos_ethercat_sdk</depend>
  <depend>rokubimini_rsl_ethercat_slave</depend>
  <depend>ek1100</depend>
  <depend>el3102</depend>

</package>
